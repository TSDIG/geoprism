  <!-- Begin custom web.xml settings -->
  <servlet>
    <servlet-name>JavascriptServlet</servlet-name>
    <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
                
    <!-- Location in classpath of the config file -->
    <init-param>
      <param-name>configLocation</param-name>
      <param-value>/jawr.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
        
  <servlet>
    <servlet-name>CSSServlet</servlet-name>
    <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
                
    <!-- Location in classpath of the config file -->
    <init-param>
      <param-name>configLocation</param-name>
      <param-value>/jawr.properties</param-value>
    </init-param>
    <init-param>
      <param-name>type</param-name>
      <param-value>css</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
        
  <servlet-mapping>
    <servlet-name>JavascriptServlet</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping> 
        
  <servlet-mapping>
    <servlet-name>CSSServlet</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
	
	<filter>
	  <filter-name>EncodingFilter</filter-name>
	  <filter-class>com.runwaysdk.geodashboard.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>EncodingFilter</filter-name>
	  <url-pattern>*</url-pattern>
	</filter-mapping>	

	<filter>
	  <filter-name>SessionFilter</filter-name>
	  <filter-class>com.runwaysdk.geodashboard.SessionFilter</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>SessionFilter</filter-name>
	  <url-pattern>*</url-pattern>
	</filter-mapping>
	  
	<filter>
	  <filter-name>NoExtensionFilter</filter-name>
	  <filter-class>com.runwaysdk.web.filter.NoExtensionDispatchFilter</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>NoExtensionFilter</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
	
  <listener>
    <listener-class>com.runwaysdk.geodashboard.gis.web.context.GeodashboardContextListener</listener-class>
  </listener>
    
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/com/runwaysdk/geodashboard/error.jsp</location>
  </error-page>
  
  <error-page>
    <exception-type>com.runwaysdk.session.InvalidSessionExceptionDTO</exception-type>
    <location>/com/runwaysdk/geodashboard/login/login.jsp</location>
  </error-page>
  
  
  

	<!-- End custom web.xml settings -->

  <filter>
    <filter-name>
      RunwayFilter
    </filter-name>
    <filter-class>
      com.runwaysdk.web.RunwayFilter
    </filter-class>
  </filter>

  <filter-mapping>
    <filter-name>
      RunwayFilter
    </filter-name>
    <url-pattern>
      *.mojo
    </url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>
      MojaxFilter
    </filter-name>
    <filter-class>
      com.runwaysdk.web.MojaxFilter
    </filter-class>
  </filter>

  <filter-mapping>
    <filter-name>
      MojaxFilter
    </filter-name>
    <url-pattern>
      *.mojax
    </url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>
      MofoFilter
    </filter-name>
    <filter-class>
      com.runwaysdk.web.MofoFilter
    </filter-class>
  </filter>

  <filter-mapping>
    <filter-name>
      MofoFilter
    </filter-name>
    <url-pattern>
      *.mofo
    </url-pattern>
  </filter-mapping>


</web-app>
