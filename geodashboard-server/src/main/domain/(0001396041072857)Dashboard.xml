<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness name="com.runwaysdk.geodashboard.Dashboard" label="Dashboard" cacheAlgorithm="everything">
        <attributes>
          <localChar name="displayLabel" label="Label" required="true" />
          <reference name="country" label="Country" type="com.runwaysdk.system.gis.geo.GeoEntity" required="true" />
          <reference name="dashboardRole" label="Role" type="com.runwaysdk.system.Roles" required="true" />
        </attributes>
        <mdMethod name="getSortedDashboards" label="Get Sorted Dashboards" static="true" returnType="com.runwaysdk.geodashboard.DashboardQuery" />
        <mdMethod name="getSortedTypes" label="Get Sorted Types" description="Returns a sorted list of de-referenced MdClasses stored by MetadataWrapper" returnType="com.runwaysdk.system.metadata.MdClass[]" />
        <mdMethod name="applyConditions" label="Apply conditions" static="false" returnType="void">
          <mdParameter order="0" description="Conditions" name="conditions" label="Conditions" type="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition[]" />
        </mdMethod>
        <mdMethod name="applyWithOptions" label="Apply With Options" static="false" returnType="void">
          <mdParameter order="0" description="Array of user ids assigned to this dashboard" name="userIds" label="User Ids" type="java.lang.String[]" />
        	<mdParameter name="name" label="Dashboard Name" order="1" type="java.lang.String" />
        </mdMethod>        
        <mdMethod name="getConditions" label="Get conditions" static="false" returnType="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition[]" />
        <mdMethod static="true" description="Creates a new dashboard." name="create" label="create" returnType="com.runwaysdk.geodashboard.Dashboard">
          <mdParameter order="0" description="A Dashboard to create." name="dto" label="A Dashboard to apply." type="com.runwaysdk.geodashboard.Dashboard" />
        </mdMethod>
        <mdMethod static="true" description="Assign users to a dashboard" name="assignUsers" label="Assign Users" returnType="void">
          <mdParameter order="0" description="Dashboard Id" name="dashboardId" label="Dashboard Id." type="java.lang.String" />
          <mdParameter order="1" description="Array of user ids assigned to this dashboard" name="userIds" label="User Ids" type="java.lang.String[]" />
        </mdMethod>
        <mdMethod static="false" description="Get all dashboard users and their access status" name="getAllDashboardUsersJSON" label="Get all dashboard users" returnType="java.lang.String"></mdMethod>
      	<mdMethod static="false" description="Get all dashboard users" name="getAllDashboardUsers" label="Get all dashboard users" returnType="com.runwaysdk.geodashboard.GeodashboardUser[]"></mdMethod>
      </mdBusiness>

      <mdRelationship name="com.runwaysdk.geodashboard.DashboardMetadata" label="Dashboard Metadata" cacheAlgorithm="everything">
        <parent cardinality="*" name="com.runwaysdk.geodashboard.Dashboard" method="Dashboard" />
        <child cardinality="*" name="com.runwaysdk.geodashboard.MetadataWrapper" method="Metadata" />
        <attributes>
          <integer name="listOrder" required="true" />
        </attributes>
      </mdRelationship>

      <mdBusiness name="com.runwaysdk.geodashboard.MetadataWrapper" label="Dashboard Wrapper" cacheAlgorithm="everything">
        <attributes>
          <reference name="wrappedMdClass" type="com.runwaysdk.system.metadata.MdClass" label="MdClass" required="true" />
        </attributes>
        <mdMethod name="getSortedAttributes" label="Get Sorted Attributes" description="Returns a sorted list of de-referenced MdAttributes stored by MetadataAttribute" returnType="com.runwaysdk.geodashboard.MdAttributeView[]">
        </mdMethod>
      </mdBusiness>

      <mdView name="com.runwaysdk.geodashboard.MdAttributeView" label="MdAttribute View">
        <attributes>
          <char name="mdClassId" required="true" label="MdClass " size="64" />
          <char name="mdAttributeId" required="true" label="MdAttribute " size="64" />
          <char name="displayLabel" required="true" label="Display Label" size="255" />
        </attributes>
      </mdView>

      <mdRelationship name="com.runwaysdk.geodashboard.DashboardAttributes" label="Dashboard Attributes" cacheAlgorithm="everything">
        <parent cardinality="*" name="com.runwaysdk.geodashboard.MetadataWrapper" method="DashboardMetadata" />
        <child cardinality="*" name="com.runwaysdk.geodashboard.AttributeWrapper" method="AttributeWrapper" />
        <attributes>
          <integer name="listOrder" required="true" />
        </attributes>
      </mdRelationship>

<!-- 
      <mdRelationship name="com.runwaysdk.geodashboard.MetadataGeoNode" label="Wrapper Geo node" cacheAlgorithm="everything">
        <parent cardinality="*" name="com.runwaysdk.geodashboard.MetadataWrapper" method="DashboardMetadata" />
        <child cardinality="*" name="com.runwaysdk.system.gis.geo.GeoNode" method="GeoNode" />
      </mdRelationship>
 -->


      <mdBusiness name="com.runwaysdk.geodashboard.AttributeWrapper" label="Attribute Wrapper" cacheAlgorithm="everything">
        <attributes>
          <reference name="wrappedMdAttribute" type="com.runwaysdk.system.metadata.MdAttribute" label="MdAttribute" required="true" />
        </attributes>
      </mdBusiness>

      <mdException name="com.runwaysdk.geodashboard.gis.NoDashboardException" label="No Dashboard Exception" description="Thrown when a user tries to render a map without a dashboard." message="You must first create a Dashboard before you can render a map.">
      </mdException>
      <mdException name="com.runwaysdk.geodashboard.gis.DashboardHasNoMapException" label="Dashboard Has No Map Exception" description="Thrown when a user tries to render a dashboard that has no map." message="This Dashboard has no map to display.">
      </mdException>

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" label="Condition" isAbstract="true" generateController="false">
        <attributes>
          <reference name="geodashboardUser" required="false" label="User" description="User of the condition" type="com.runwaysdk.geodashboard.GeodashboardUser" />
          <reference name="dashboard" required="true" label="Dashboard" description="Dashboard of the condition" type="com.runwaysdk.geodashboard.Dashboard" />
        </attributes>
      </mdBusiness>

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardAttributeCondition" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" label="Attribute condition" isAbstract="true" generateController="false">
        <attributes>
          <reference name="definingMdAttribute" required="true" label="Defining MdAttribute" description="Attribute of the condition" type="com.runwaysdk.system.metadata.MdAttribute" />
        </attributes>
      </mdBusiness>

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.LocationCondition" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" label="Location condition" isAbstract="false" generateController="false">
        <attributes>
          <reference name="comparisonValue" size="255" required="true" label="Value" type="com.runwaysdk.system.gis.geo.GeoEntity" />
        </attributes>
      </mdBusiness>

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardAttributeCondition" label="Primitive" isAbstract="true" generateController="false">
        <attributes>
          <text name="comparisonValue" required="true" label="Value" />
        </attributes>
      </mdBusiness>

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" label="Equals" generateController="false" />

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThan" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" label="Greater Than" generateController="false" />

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThan" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" label="Less Than" generateController="false" />

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThanOrEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" label="Greater Than Or Equal" generateController="false" />

      <mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThanOrEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" label="Less Than Or Equal" generateController="false" />
    </create>
  </doIt>
  <undoIt>
    <delete>
      <object key="com.runwaysdk.geodashboard.AttributeWrapper" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.MetadataWrapper" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.DashboardAttributes" type="com.runwaysdk.system.metadata.MdRelationship" />
      <object key="com.runwaysdk.geodashboard.DashboardMetadata" type="com.runwaysdk.system.metadata.MdRelationship" />
      <object key="com.runwaysdk.geodashboard.Dashboard" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.MdAttributeView" type="com.runwaysdk.system.metadata.MdView" />

      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThan" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThanOrEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThan" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThanOrEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
    </delete>
  </undoIt>
</version>