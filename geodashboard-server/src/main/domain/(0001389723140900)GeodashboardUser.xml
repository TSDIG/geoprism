<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness name="com.runwaysdk.geodashboard.GeodashboardUser" label="User" extends="com.runwaysdk.system.Users" generateController="false" >
        <attributes>
          <char name="firstName" label="First name" size="255" required="true"/>
          <char name="lastName" label="Last name" size="255" required="true"/>
          <char name="phoneNumber" label="Phone number" size="255" required="false"/>
          <char name="email" label="Email" size="255" required="true"/>
        </attributes>
        <mdMethod name="applyWithRoles" label="Apply with roles" returnType="void" static="false">
          <mdParameter name="roleIds" label="Role ids" order="0" type="java.lang.String[]" />
        </mdMethod>
      </mdBusiness>
      <mdController name="com.runwaysdk.geodashboard.AdminController" label="User controller" >
        <mdAction name="users" label="Users" isPost="false" isQuery="false"  />
        <mdAction name="geoentity" label="Geo entity" isPost="false" isQuery="false"  />
        <mdAction name="roles" label="Roles" isPost="false" isQuery="false"  />
        <mdAction name="universal" label="Universal" isPost="false" isQuery="false"  />
        <mdAction name="scheduler" label="Universal" isPost="false" isQuery="false"  />
        <mdAction name="databrowser" label="Universal" isPost="false" isQuery="false"  />
      </mdController>
      <mdView name="com.runwaysdk.geodashboard.RoleView" label="Role view" >
        <attributes>
          <char name="roleId" label="Role id" size="64" required="true"/>
          <text name="displayLabel" label="Display label" />
          <boolean name="assigned" label="Is assigned" description="Flag denoting if the current user is assigned to the role"/>
        </attributes>
        <mdMethod name="getAdminRoles" label="Get admin roles" static="true" returnType="com.runwaysdk.geodashboard.RoleView[]" >
          <mdParameter name="user" label="User" order="0" type="com.runwaysdk.geodashboard.GeodashboardUser"/>
        </mdMethod>        
        <mdMethod name="getDashboardRoles" label="Get dashboard roles" static="true" returnType="com.runwaysdk.geodashboard.RoleView[]" >
          <mdParameter name="user" label="User" order="0" type="com.runwaysdk.geodashboard.GeodashboardUser"/>        
        </mdMethod>        
      </mdView>
    </create>
  </doIt>
  <undoIt>
    <delete>
      <object key="com.runwaysdk.geodashboard.RoleView" type="com.runwaysdk.system.metadata.MdView"/>
      <object key="com.runwaysdk.geodashboard.AdminController" type="com.runwaysdk.system.metadata.MdController"/>
      <object key="com.runwaysdk.geodashboard.GeodashboardUser" type="com.runwaysdk.system.metadata.MdBusiness"/>
    </delete>
  </undoIt>
</version>