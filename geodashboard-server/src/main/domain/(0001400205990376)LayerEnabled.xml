<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>

		<create>
			<mdInformation
				name="com.runwaysdk.geodashboard.gis.persist.LayerExcludedException"
				label="Layer Excluded from Map"
				message="The layer [{layerName}] was invalid and excluded from the map.">
				<attributes>
					<virtual name="layerName" concrete="name"
						type="com.runwaysdk.geodashboard.gis.persist.DashboardLayer"
						required="true" />
				</attributes>
			</mdInformation>

			<mdException
				name="com.runwaysdk.geodashboard.gis.persist.NoLayersException"
				label="No Layers Exception" message="The map [{mapName}] contains no valid layers.">
				<attributes>
				<virtual name="mapName" concrete="name"
					type="com.runwaysdk.geodashboard.gis.persist.DashboardMap"
					required="true" />
				</attributes>
			</mdException>
		</create>

		<update>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.DashboardLayer">
				<create>
					<attributes>
						<boolean name="layerEnabled" required="true" defaultValue="true"
							label="Layer Enabled" />
					</attributes>
				</create>
			</mdBusiness>

		</update>
	</doIt>
	<undoIt>
		<delete>

			<object
				key="com.runwaysdk.geodashboard.gis.persist.DashboardLayer.layerEnabled"
				type="com.runwaysdk.system.metadata.MdAttribute" />

			<object
				key="com.runwaysdk.geodashboard.gis.persist.LayerExcludedException"
				type="com.runwaysdk.system.metadata.MdInformation" />
				
			<object
				key="com.runwaysdk.geodashboard.gis.persist.NoLayersException"
				type="com.runwaysdk.system.metadata.MdException" />

		</delete>
	</undoIt>
</version>