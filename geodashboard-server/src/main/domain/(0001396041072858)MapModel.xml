<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>
		<create>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.DashboardMap" label="Map" generateController="true">
				<attributes>
					<char name="name" label="Name" size="50" required="true" indexType="unique index" />
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.DashboardLayer" label="Layer" generateController="true">
				<attributes>
					<char name="name" label="Name" size="50" required="true" />
					<boolean name="displayInLegend" label="Display In Legend" required="true" default="true" />
					<boolean name="virtual" label="Virtual" description="Sets each ruleset in a separate feature type if true" required="true" default="false" />
					<enumeration name="layerType" label="Layer Type" required="true" type="com.runwaysdk.geodashboard.gis.persist.AllLayerType" />
				</attributes>
			</mdBusiness>

			<mdRelationship name="com.runwaysdk.geodashboard.gis.persist.HasLayer" label="Has Layer" composition="true">
				<attributes>
					<integer name="layerIndex" required="true" rejectNegative="true" />
				</attributes>
				<parent cardinality="1" name="com.runwaysdk.geodashboard.gis.persist.DashboardMap" method="ContainingMap" />
				<child cardinality="*" name="com.runwaysdk.geodashboard.gis.persist.DashboardLayer" method="HasLayer" />
			</mdRelationship>

			<enumerationMaster name="com.runwaysdk.geodashboard.gis.persist.LayerType" label="Layer Type">
			</enumerationMaster>

			<object key="BASIC" type="com.runwaysdk.geodashboard.gis.persist.LayerType">
				<attribute name="enumName" value="BASIC" />
				<attributeStruct name="displayLabel">
					<attribute name="defaultLocale" value="Basic" />
				</attributeStruct>
			</object>

			<object key="BUBBLE" type="com.runwaysdk.geodashboard.gis.persist.LayerType">
				<attribute name="enumName" value="BUBBLE" />
				<attributeStruct name="displayLabel">
					<attribute name="defaultLocale" value="Bubble" />
				</attributeStruct>
			</object>

			<object key="GRADIENT" type="com.runwaysdk.geodashboard.gis.persist.LayerType">
				<attribute name="enumName" value="GRADIENT" />
				<attributeStruct name="displayLabel">
					<attribute name="defaultLocale" value="Gradient" />
				</attributeStruct>
			</object>

			<object key="CATEGORY" type="com.runwaysdk.geodashboard.gis.persist.LayerType">
				<attribute name="enumName" value="CATEGORY" />
				<attributeStruct name="displayLabel">
					<attribute name="defaultLocale" value="Category" />
				</attributeStruct>
			</object>

			<mdEnumeration name="com.runwaysdk.geodashboard.gis.persist.AllLayerType" type="com.runwaysdk.geodashboard.gis.persist.LayerType"
				label="All Layer Type">
				<includeAll></includeAll>
			</mdEnumeration>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.DashboardStyle" label="Style" generateController="true">
				<attributes>
					<char name="name" label="Name" size="50" required="true" />
					
					<!-- value styles -->
					<boolean name="enableValue" label="enableValue" required="true" defaultValue="false" />
					<char name="valueFont" label="Value Font" size="10" required="true" />
					<integer name="valueSize" label="Value Size" required="true" rejectNegative="true" />
					<char name="valueColor" label="Value Color" size="10" required="true" />
					<char name="valueHalo" label="Value Halo" size="10" required="true" />
					<integer name="valueHaloWidth" label="Value Halo Width" required="true" rejectNegative="true" />
					
					<!-- label styles -->
					<boolean name="enableLabel" label="enableLabel" required="true" defaultValue="false" />
					<char name="labelFont" label="Label Font" size="25" required="true" defaultValue="helvetica"/>
					<integer name="labelSize" label="Label Size" required="true" defaultValue="12" rejectNegative="true" />
					<char name="labelColor" label="Label Color" size="7" required="true" defaultValue="#000000"/>
					<char name="labelHalo" label="Label Halo" size="7" required="false" defaultValue="#FFFFFF"/>
					<integer name="labelHaloWidth" label="Label Halo Width" required="false" defaultValue="3" rejectNegative="true" />
					
					<!-- point styles -->
					<integer name="pointSize" label="Point Size" required="true" defaultValue="6" rejectNegative="true" />
					<char name="pointStroke" label="Point Stroke" size="7" required="false" defaultValue="#000000"/>
					<integer name="pointStrokeWidth" label="Point Stroke Width" required="true" defaultValue="2" rejectNegative="true" />
					<char name="pointWellKnownName" label="Well Known Name" size="50" required="true" defaultValue="circle" />
					<char name="pointFill" label="Point Fill" size="7" required="true" defaultValue="#00bfff" />
					<double name="pointOpacity" label="Point Opacity" required="true" length="2" decimal="2" defaultValue=".7" rejectNegative="true" />
					<integer name="pointRotation" label="Point Rotation" required="false" defaultValue="0" />
					
					<!-- line styles -->
					<char name="lineStroke" label="Line Stroke" size="7" required="true" defaultValue="#000000"/>
					<integer name="lineStrokeWidth" label="Line Stroke Width" required="true" defaultValue="3" rejectNegative="true" />
					<char name="lineStrokeCap" label="Line Stroke Cap" size="6" required="false" defaultValue="butt" />
					<double name="lineOpacity" label="Line Opacity" required="true" length="2" decimal="2" defaultValue=".7" rejectNegative="true" />
					
					<!-- polygon styles -->
					<char name="polygonFill" label="Polygon Fill" size="7" required="true" defaultValue="#00bfff" />
					<double name="polygonFillOpacity" label="Polygon Fill Opacity" required="true" length="2" decimal="2" defaultValue=".7" rejectNegative="true" />
					<char name="polygonStroke" label="Polygon Stroke" size="7" required="false" defaultValue="#000000" />
					<integer name="polygonStrokeWidth" label="Polygon Stroke Width" required="true" defaultValue="2" rejectNegative="true" />
					<double name="polygonStrokeOpacity" label="Polygon Stroke Opacity" required="true" length="2" decimal="2" defaultValue=".7" rejectNegative="true" />
				</attributes>
			</mdBusiness>


			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.DashboardThematicStyle" label="Thematic Attribute" generateController="true"
				extends="com.runwaysdk.geodashboard.gis.persist.DashboardStyle">
				<attributes>
					<reference name="mdAttribute" required="true" type="com.runwaysdk.system.metadata.MdAttribute" />
					<reference name="styleCondition" required="true" type="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" />
				</attributes>
			</mdBusiness>

			<mdRelationship name="com.runwaysdk.geodashboard.gis.persist.HasStyle" label="Has Style" composition="true">
				<parent cardinality="1" name="com.runwaysdk.geodashboard.gis.persist.DashboardLayer" method="ContainingLayer" />
				<child cardinality="*" name="com.runwaysdk.geodashboard.gis.persist.DashboardStyle" method="HasStyle" />
			</mdRelationship>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" label="Condition" isAbstract="true"
				generateController="true">
				<attributes>
					<reference name="styleReference" required="true" label="Style" description="Back-reference to the Style that points to this condition."
						type="com.runwaysdk.geodashboard.gis.persist.DashboardStyle" />
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition"
				label="Primitive" isAbstract="true" generateController="true">
				<attributes>
					<char name="comparisonValue" size="255" required="true" label="Value" />
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive"
				label="Equals" generateController="true">
				<attributes>
					<char name="attributeValue" size="100" required="true" label="Value" />
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThan" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive"
				label="Greater Than" generateController="true">
				<attributes>
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThan" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive"
				label="Less Than" generateController="true">
				<attributes>
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThanOrEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive"
				label="Greater Than Or Equal" generateController="true">
				<attributes>
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThanOrEqual" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive"
				label="Less Than Or Equal" generateController="true">
				<attributes>
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardComposite" extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition"
				label="Composite" isAbstract="true" generateController="true">
				<attributes>
					<reference name="leftCondition" required="true" type="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" />
					<reference name="rightCondition" required="true" type="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" />
				</attributes>
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardAnd" label="And"
				extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardComposite" generateController="true">
			</mdBusiness>

			<mdBusiness name="com.runwaysdk.geodashboard.gis.persist.condition.DashboardOr" label="Or"
				extends="com.runwaysdk.geodashboard.gis.persist.condition.DashboardComposite" generateController="true">
			</mdBusiness>

		</create>
		<update></update>
	</doIt>
	<undoIt>
		<delete>

			<object key="com.runwaysdk.geodashboard.gis.persist.DashboardMap" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.DashboardLayer" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.HasLayer" type="com.runwaysdk.system.metadata.MdRelationship" />
			<object key="com.runwaysdk.geodashboard.gis.persist.DashboardStyle" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.DashboardThematicStyle" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardCondition" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardPrimitive" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThan" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardGreaterThanOrEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThan" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardLessThanOrEqual" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardComposite" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardAnd" type="com.runwaysdk.system.metadata.MdBusiness" />
			<object key="com.runwaysdk.geodashboard.gis.persist.condition.DashboardOr" type="com.runwaysdk.system.metadata.MdBusiness" />

		</delete>
	</undoIt>
</version>