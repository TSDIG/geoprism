  <doIt>
    <update>
      <mdBusiness name="com.runwaysdk.geodashboard.Dashboard">      
        <create>
          <attributes>
            <boolean name="removable" label="Removable" defaultValue="true" positiveLabel="true" negativeLabel="false"/>
          </attributes>
        </create>
      </mdBusiness>
    </update>
    <create>
      <mdException name="com.runwaysdk.geodashboard.DashboardDeleteException" label="Dashboard delete exception" message="The dashboard [{label}] is a required dashboard and cannot be deleted">
        <attributes>
          <text name="label" label="Label" />
        </attributes>
      </mdException>
    </create>
  </doIt>
  <undoIt>
    <delete>
      <object key="com.runwaysdk.geodashboard.Dashboard.removable" type="com.runwaysdk.system.metadata.MdAttribute"/>
    </delete>
  </undoIt>
